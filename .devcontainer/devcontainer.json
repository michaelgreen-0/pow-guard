{
	"name": "Python Dev Container",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "devcontainer",
	"workspaceFolder": "/home/workspace",
	"customizations": 
		{
			"extensions": 
			{
				"python.defaultInterpreterPath": "/workspaces/python-proxy/.venv/bin/python",
				"vscode": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter"
			]
		},
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/devcontainers/features/git:1": {}
    },
	"mounts": [
		"source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.ssh/id_rsa,target=/home/vscode/.ssh/id_rsa,type=bind,consistency=cached",
		"source=${env:HOME}/.ssh,target=/vscode/.ssh,type=bind",
		"source=${env:HOME}/.gitconfig,target=/vscode/.gitconfig,type=bind"
	]
}
